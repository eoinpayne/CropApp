<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.eoinpayne.crop.cropapp.HomeActivity"
    android:orientation="vertical"
    >

    <!-- application name header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello world!!:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:id="@+id/welcome_txt"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity = "left"
            android:id="@+id/updateButtonLayout"
            android:weightSum="1.0">

                <Button
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:text="@string/update_garden_btn_lbl"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight=".5"


                android:id="@+id/updateGarden_btn"
                android:background="@drawable/btn_selecter"
                android:textColor="@color/textColor"
                    android:singleLine="false"
                    android:layout_marginRight="1dp" />

            <Button
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:text="SHOW UPDATE LIST"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"

                android:id="@+id/showUpdateGarden_btn"
                android:background="@drawable/btn_selecter"
                android:textColor="@color/textColor"

                android:layout_marginLeft="1dp" />
        </LinearLayout>

        <!--"-->
        <Button
            android:id="@+id/createGarden_btn"
            android:layout_below="@id/updateButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="CREATE GARDEN"
            android:textStyle="bold"
            style="?android:textAppearanceSmall"
            android:background="@drawable/btn_selecter"
            android:textColor="@color/textColor"

            android:layout_marginTop="3dp" />
        <ListView
            android:layout_below="@id/createGarden_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello world!!:"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:id="@+id/garden_list"

            />

    </RelativeLayout>

</LinearLayout>



