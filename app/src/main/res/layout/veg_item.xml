        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        >
    </TextView>

    <TextView
        android:id="@+id/vegCountPrefix"
        android:text="   x "
        android:layout_toRightOf="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        >
    </TextView>
    <TextView
        android:id="@+id/vegCount"
        android:text="--"
        android:layout_toRightOf="@+id/vegCountPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"

        >
    </TextView>
    <TextView
        android:id="@+id/waterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:text="Days since watered: "
        android:layout_alignBottom="@+id/titleView"
        android:layout_alignParentRight="true"
        android:textSize="15sp"

        >

    </TextView>
    <TextView
        android:id="@+id/waterCount"
        android:layout_below="@+id/waterTitle"
        android:layout_alignLeft="@+id/waterTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"

        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor"

        >
    </TextView>

    <TextView
        android:id="@+id/StatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/statusCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/done_string"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        >
    </TextView>

    <CheckBox
        android:id="@+id/statusCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/StatusLabel"
